import java.util.Scanner;


abstract public class Switch_Menu {

    public abstract void menu();
    
    public static void SupplierEntryMenu(SM_menu smMenu){
    System.out.println("SupplierEntry \n\n1. Add Record\n2. Edit Record \n3. Delete Record\n4. Return to previous menu");
    Scanner SupplierEntryMenuInput = new Scanner(System.in);
    int SupplierEntryMenu_Input = SupplierEntryMenuInput.nextInt();
    switch(SupplierEntryMenu_Input){
        case 1: SupplierDetails.addSupplierDetail();smMenu.menu();break;
        case 2: SupplierDetails.editSupplierDetail();smMenu.menu();break;
        case 3: SupplierDetails.deleteSupplierDetail();smMenu.menu();break;
        case 4 :smMenu.menu();break;
        default:break;
    }
    }
    
    public static void ItemEntryMenu(SM_menu pmMenu){
    System.out.println("ItemEntry \n\n1. Add Record\n2. Edit Record \n3. Delete Record\n4. Return to previous menu");
    Scanner ItemEntryMenuInput = new Scanner(System.in);
    int ItemEntryMenu_Input = ItemEntryMenuInput.nextInt();
    switch(ItemEntryMenu_Input){
        case 1: ItemDetails.AddItem();pmMenu.menu();break;//Additem();
        case 2: ItemDetails.EditItem();pmMenu.menu();break; //Edititem();
        case 3: ItemDetails.DeleteItem();pmMenu.menu();break; //Deleteitem();
        case 4: pmMenu.menu();break;
        default:break;
    }
    }

    
}//dont delete this, this is the end of this class



class SM_menu extends Switch_Menu{
    @Override
    public void menu(){
        System.out.println("Sale Manager\nMenu \n\n1. Item Entry \n2. Supplier Entry \n3. Daily Item-wise Sales Entry \n4. Create Purchase Requisition \n5. View Purchase Requisition \n6. View List of Purchase Order");
        System.out.println("Enter number to continue: \n");
        Scanner menuInput = new Scanner(System.in);
        int MenuInput = menuInput.nextInt();
        switch(MenuInput){
            case 1:ItemEntryMenu(this);break;
            case 2:SupplierEntryMenu(this); break;
            case 3:break;
            case 4:break;
            case 5:break;
            case 6:break;
            default:break;
        }
    }
}

class PM_menu extends Switch_Menu{
    @Override
    public void menu(){
        System.out.println("Purcahse Manager \nMenu \n\n1. Item List \n2. Supplier List \n3. Display Purchase Requisition \n4. Generate Purcahse Order \n5. View List of Purchase Order ");
        System.out.println("Enter number to continue: \n");
        Scanner menuInput = new Scanner(System.in);
        int MenuInput = menuInput.nextInt();
        switch(MenuInput)
                {
            case 1:break;
            case 2:break;
            case 3:break;
            case 4:break;
            case 5:break;
            default:break;
                }
    }
}

