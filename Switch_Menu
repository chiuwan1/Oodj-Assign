class Admin_menu extends Switch_Menu {

    @Override
    public void menu() {
        Scanner menuInput = new Scanner(System.in);
        while (true) {
            System.out.println("Admin\nMenu \n\n1. Register New User\n2. Add Item \n3. Delete Item \n4. Edit Item \n5. Supplier Entry \n6. Daily Item-wise Sales Entry  \n7. Delete Daily Item-wise Sales Entry  \n8. Create Purchase Requisitionn \n9. Display Requisition \n10. View List of Purchase Order \n11. View List of Items \n12. View List of Suppliers \n13. Generate Purchase Order \n14. Exit");
            System.out.println("Enter number to continue: \n");
            int MenuInput = menuInput.nextInt();
            switch (MenuInput) {
                case 1:
                    Admin.addNewUser();
                    break;
                case 2:
                    ItemDetails.AddItem();
                    break;
                case 3:
                    ItemDetails.DeleteItem();
                    break;
                case 4:
                    ItemDetails.EditItem();
                    break;
                case 5:
                    break;
                case 6:
                    DailySales.dailyItemWiseSalesEntry();
                    break;
                case 7:
                    DailySales.DeleteDailySalesEntry();
                    break;
                case 8:
                    PurchaseRequisition.displayStockItems();
                    PurchaseRequisition.generatePR();
                    break;
                case 9:
                    PurchaseRequisition.displayPRList();
                    break;
                case 10:
                    break;
                case 11:
                    PurchaseRequisition.displayStockItems();
                    break;
                case 12:
                    break;
                case 13:
                    break;
                case 14:
                    System.out.println("Exiting the program.");
                    menuInput.close();
                    return;
                default:
                    System.out.println("Please enter a valid option!");
                    break;
            }
        }
    }
}
